{
  "name": "react-hello-world",
  "version": "1.0.0",
  "description": "React hello world tutorial",
  "main": "index.js",
  "scripts": {
    "build": "webpack -p",
    "dev": "webpack-dev-server --content-base ./static",
    "start:server": "http-server -p 3000 ./static",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "./node_modules/jest/bin/jest.js --coverage --verbose --setupTestFrameworkScriptFile test/test_helper.js",
    "test:coverage": "NODE_ENV=test nyc --show-process-tree --require babel-core/register ./node_modules/karma/bin/karma start karma.conf.js",
    "lint-and-test": "npm run lint && npm run test",
    "production": "docker-compose build react-hello-world && docker-compose up react-hello-world",
    "testing": "docker-compose build react-hello-world-test && docker-compose up react-hello-world-test"
  },
  "author": "Alex Goretoy",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-jest": "^19.0.0",
    "babel-preset-react": "^6.23.0",
    "babelify": "^7.3.0",
    "brfs": "^1.4.3",
    "browserify": "^14.1.0",
    "browserify-shim": "^3.8.13",
    "chai": "^3.5.0",
    "chance": "^1.0.6",
    "eslint": "^3.16.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jest": "^19.0.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "jasmine": "^2.5.3",
    "jest": "^19.0.0",
    "jsdom": "^9.11.0",
    "karma": "^1.5.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage-istanbul-reporter": "^0.2.3",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "mocha": "^3.2.0",
    "mocha-webpack": "^0.7.0",
    "nyc": "^10.1.2",
    "phantomjs": "^2.1.7",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "tls": "0.0.1",
    "watchify": "^3.9.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "dependencies": {
    "http-server": "^0.9.0",
    "istanbul": "^0.4.5",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      ".tmp",
      "test"
    ]
  },
  "browserify-shim": {}
}
